{
    "compilerOptions": {
        "outDir": "app/build",
        "target": "ES6",
        "module": "CommonJS",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["app/src/**/*"]
}